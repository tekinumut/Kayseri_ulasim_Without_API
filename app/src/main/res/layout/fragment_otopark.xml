<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <Button
        android:id="@+id/otopark_show_on_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/lightPurpleButton"
        android:text="@string/hepsi_haritada"
        android:textColor="@color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_view_otopark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/otopark_show_on_map"
        android:layout_marginTop="15dp" />

    <ProgressBar
        android:id="@+id/progressBar_otopark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>