<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="2dp"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:id="@+id/non_lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bus_of_stops"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_bus_24dp_primary"
            android:gravity="center"
            android:text="@string/gececek_otobusler"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/bus_of_lines"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_bus_24dp_primary"
            android:gravity="center"
            android:text="@string/gecen_hatlar"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:id="@+id/non_view1"
        android:layout_below="@id/non_lin1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray" />


    <LinearLayout
        android:layout_below="@id/non_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.like.LikeButton
                android:id="@+id/station_favorite"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                app:icon_size="20dp"
                app:icon_type="star" />

            <TextView
                android:id="@+id/station_fav_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/station_favorite"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Favorilere ekle"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/get_direction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_directions"
            android:gravity="center"
            android:text="Yol tarifi al"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>


    <!--


    -->

</RelativeLayout>
