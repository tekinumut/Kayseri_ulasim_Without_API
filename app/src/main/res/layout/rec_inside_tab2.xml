<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/bus_logo" />

    <TextView
        android:id="@+id/station_name_tab2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:layout_toStartOf="@id/get_direction_tab2"
        android:layout_toEndOf="@+id/image1"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/station_distance_tab2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/station_name_tab2"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:layout_toStartOf="@id/get_direction_tab2"
        android:layout_toEndOf="@id/image1"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/get_direction_tab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:drawableTop="@drawable/ic_directions"
        android:gravity="center"
        android:text="@string/goto_stop"
        android:textColor="@color/black"
        android:textSize="14sp" />

</RelativeLayout>